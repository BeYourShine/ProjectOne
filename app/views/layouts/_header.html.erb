<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".link_app"), root_path, class: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".link_home"), root_path %></li>
        <li><%= link_to t(".link_help"), help_path %></li>
        <li><%= link_to t("lang.eng"), lang_path(lang: :en) %></li>
        <li><%= link_to t("lang.viet"), lang_path(lang: :vi) %></li>
        <% if logged_in? %>
          <li><%= link_to t(".link_user"), users_path %></li>
          <li class="dropdown">
            <%= link_to("#", class: "dropdown-toggle",
              data: {toggle: "dropdown"}) do %>
                <%= t(".p_account") %>
                <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".link_profile"), current_user %></li>
              <li><%= link_to t(".link_setting"),
                edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".link_log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".link_log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
