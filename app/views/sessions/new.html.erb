<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label :email, t(".lable_email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t(".lable_pass") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit t(".lable_submit"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t ".p1" %>
    <%= link_to t(".link_signup"), signup_path %>
    </p>
  </div>
</div>
