<% if user.errors.any? %>
  <div class="error-explanation">
    <div class="alert alert-danger">
      <%= t ".h1" %>
      <%= pluralize user.errors.count, t(".error") %>.
    </div>
    <ul>
    <% user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
