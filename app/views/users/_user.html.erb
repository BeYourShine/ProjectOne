<li>
  <%= gravatar_for user, size: Settings.views.users.user.gravatar_size %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user.current_user?(user) %>
    <span>| </span>
    <%= link_to t(".link_delete"), user, method: :delete,
      data: {confirm: t(".confirm_delete")} %>
  <% end %>
</li>
