<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size:
    Settings.views.micropost.micropost.gravatar_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t ".p1" %>
    <abbr class="timeago" title="<%= micropost.created_at.getutc.iso8601 %>">
      <%= micropost.created_at.to_s %>
    </abbr>
    <%= t ".p2" %>
    <% return unless current_user %>
    <% if current_user.current_user? micropost.user %>
      <%= link_to t(".delete_post"), micropost, method: :delete,
        data: {confirm: t(".confirm_delete")} %>
    <% end %>
  </span>
</li>
